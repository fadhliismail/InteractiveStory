<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.fadhliismail.interactivestory.ui.MainActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/main_title"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:id="@+id/titleImageView"
        android:scaleType="fitXY"
        android:adjustViewBounds="true"
        android:contentDescription="Signals From Mars" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:layout_above="@+id/startButton"
        android:layout_alignParentStart="true"
        android:id="@+id/textPersonName"
        android:hint="Type your name  and we begin!" />

    <Button
        android:text="Start Your Adventure!"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/startButton"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:textColor="@color/colorPrimaryDark"
        android:background="@android:color/white" />

</RelativeLayout>
